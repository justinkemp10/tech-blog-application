<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>New Post</h3>

    <form class="form new-blogpost-form">
      <div class="form-group">
        <label for="blogpost-name">Title</label>
        <input
          class="form-input"
          type="text"
          id="blogpost-name"
          name="blogpost-name"
        />
      </div>
      <div class="form-group">
        <label for="blogpost-content">Content</label>
        <textarea
          class="form-input"
          id="blogpost-content"
          name="blogpost-content"
        ></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Submit</button>
      </div>
    </form>
  </div>
</div>

<script src="../public/js/dashboard.js"></script>